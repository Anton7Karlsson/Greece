<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Greece.View.DetailsPage"
             xmlns:viewmodel="clr-namespace:Greece.ViewModel"
             x:DataType="viewmodel:IslandsDetailsViewModel"
             Title="{Binding Island.Name}">

    <ScrollView>
        <VerticalStackLayout>
            <Grid ColumnDefinitions="*,Auto,*"
                  RowDefinitions="160, Auto">

                <BoxView BackgroundColor="DarkBlue"
                         Grid.ColumnSpan="3"
                         HeightRequest="160"
                         HorizontalOptions="FillAndExpand"/> <!--Lägg bilden här i stället för i cirkeln, ta bort cirkeln-->

                <Frame Grid.RowSpan="2"
                       Grid.Column="1"
                       HeightRequest="160"
                       WidthRequest="160"
                       CornerRadius="80"
                       HorizontalOptions="Center"
                       IsClippedToBounds="True"
                       Padding="0"
                       Margin="0,80,0,0">

                    <Image Aspect="AspectFill"
                           HeightRequest="160"
                           WidthRequest="160"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           Source="{Binding Island.Image}"/>
                </Frame>

            </Grid>
                
            <VerticalStackLayout Padding="10" Spacing="10">
                <Label Text="{Binding Island.Details}"
                       FontSize="20"/>
                <Label Text="{Binding Island.Location, StringFormat='Location: {0}'}"
                       FontSize="16"/>
                <Label Text="{Binding Island.Population, StringFormat='Population: {0}'}"
                       FontSize="16"/>
            </VerticalStackLayout>
            
        </VerticalStackLayout>    
    </ScrollView>
</ContentPage>

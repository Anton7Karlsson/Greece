<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Greece.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Greece.View"
    xmlns:view="clr-namespace:Greece"
    Title="Greece">

    <!--<ShellContent
        Title="Greece"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />-->
    
    <TabBar>
        <Tab Title="Home"
             Icon="house_solid.png">
       <ShellContent ContentTemplate="{DataTemplate local:MainPage}"/>
        </Tab>
        <Tab Title="Islands"
             Icon="umbrella_beach_solid.png">
        <ShellContent ContentTemplate="{DataTemplate view:IslandsPage}"/>
        </Tab>
        <Tab Title="Island Groups"
             Icon="layer_group_solid.png">
        <ShellContent Title="IslandGroups"  ContentTemplate="{DataTemplate local:IslandGroupsPage}"/>
        </Tab>
    </TabBar>
</Shell>
 
    
